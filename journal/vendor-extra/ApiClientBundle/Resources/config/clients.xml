<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <defaults public="false"/>

        <service id="libero.api_client.xml.guzzle" class="Libero\ApiClient\GuzzleXmlClient">
            <argument type="service" id="debug.stopwatch"/>
            <argument type="service" id="eight_points_guzzle.client.libero_api"/>
        </service>

        <service id="Libero\ApiClient\XmlClient" alias="libero.api_client.xml.guzzle"/>

        <service id="libero.api_client.xml.articles" class="Libero\ApiClient\ArticlesClient">
            <argument type="service" id="Libero\ApiClient\XmlClient"/>
        </service>

        <service id="Libero\ApiClient\ArticlesClient" alias="libero.api_client.xml.articles"/>

    </services>

</container>
