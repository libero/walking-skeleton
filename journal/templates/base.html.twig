{% set lang = app.request.locale %}
{% set dir = lang|locale_direction %}

<!doctype html>

<html lang="{{ lang }}" dir="{{ dir }}">

<head>

    <meta charset="utf-8">

    <title>{% block title %}{{ title|striptags }}{% endblock %} | {% trans %}app.title{% endtrans %}</title>

    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <meta name="format-detection" content="telephone=no">

    {% block head %}{% endblock %}

</head>

<body>

<h1>{% trans %}app.title{% endtrans %}</h1>

<ul>
    <li>
        {% if '/' != app.request.pathInfo %}
        <a href="{{ path('home') }}">
            {%- endif %}
            {%- trans %}app.home{% endtrans -%}
            {% if '/' != app.request.pathInfo -%}
        </a>
        {% endif %}
    </li>
</ul>

{% block body %}{% endblock %}

<hr>

<p>{% trans %}app.language_choice{% endtrans %}</p>

<ul>
    {% for locale in translator.fallbackLocales %}
        <li>
            {% if locale != app.request.locale %}
            <a href="?locale={{ locale }}">
                {% endif %}
                {{ locale|locale_name }}
                {% if app.request.locale != app.request.defaultLocale %}
                    <small lang="{{ app.request.defaultLocale }}"
                            {%- if app.request.defaultLocale|locale_direction != dir %} dir="{{ app.request.defaultLocale|locale_direction }}"{% endif %}>
                        ({{ locale|locale_name(app.request.defaultLocale) }})
                    </small>
                {% endif %}
                {% if locale != app.request.locale %}
            </a>
            {% endif %}
        </li>
    {% endfor %}
</ul>

{% block end %}

    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.1/MathJax.js?config=MML_CHTML"
            integrity="sha384-Ra6zh6uYMmH5ydwCqqMoykyf1T/+ZcnOQfFPhDrp2kI4OIxadnhsvvA2vv9A7xYv"
            crossorigin="anonymous"></script>

{% endblock %}

</body>

</html>
