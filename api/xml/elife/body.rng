    <include href="../libero/extensions/aside.rng"/>
    <include href="../libero/extensions/code.rng"/>
    <include href="../libero/extensions/doi.rng"/>
    <include href="../libero/extensions/iiif.rng"/>
    <include href="../libero/extensions/list.rng"/>
    <include href="../libero/extensions/mathml.rng"/>
