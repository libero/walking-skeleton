    <define name="libero.blocks.table.cell.base" combine="choice">
        <attribute name="background-color" ns="http://elifesciences.org">
            <choice>
                <value>blue</value>
                <value>green</value>
                <value>grey</value>
                <value>orange</value>
                <value>pink</value>
                <value>purple</value>
                <value>red</value>
                <value>yellow</value>
            </choice>
        </attribute>
    </define>

    <define name="libero.text.full.class" combine="choice">
        <choice>
            <element name="color">
                <attribute name="color">
                    <choice>
                        <value>blue</value>
                        <value>purple</value>
                        <value>red</value>
                    </choice>
                </attribute>
                <text/>
            </element>
            <element name="sequence">
                <text/>
            </element>
        </choice>
    </define>

</grammar>
